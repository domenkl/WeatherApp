<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="currentData"
            type="si.uni_lj.fe.weatherapp.data.CurrentData" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@{currentData.name}"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/current_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/city_name"
            android:layout_marginTop="10dp"
            android:background="@color/lightGrey">

            <TextView
                android:id="@+id/current_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/current_weather"
                android:textColor="@color/darkBlue"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@id/current_weather"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@null"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@id/weather_icon"
                android:text="@{currentData.temperature + `\u2103`}"
                android:textColor="@color/darkBlue"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/feels_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="48dp"
                android:layout_toEndOf="@id/temperature"
                android:text="@string/feels_like"
                android:textColor="@color/darkBlue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/feels_like_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="32dp"
                android:text="@{currentData.feelsLike + `\u2103`}"
                android:textColor="@color/darkBlue"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/cloudiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/feels_like"
                android:layout_marginStart="48dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@id/temperature"
                android:text="@string/cloudiness"
                android:textColor="@color/darkBlue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cloudiness_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/feels_like_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:text="@{currentData.cloudiness + `%`}"
                android:textColor="@color/darkBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cloudiness"
                android:layout_marginStart="48dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@id/temperature"
                android:text="@string/humidity"
                android:textColor="@color/darkBlue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cloudiness_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:text="@{currentData.humidity + `%`}"
                android:textColor="@color/darkBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/humidity"
                android:layout_marginStart="48dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@id/temperature"
                android:text="@string/wind"
                android:textColor="@color/darkBlue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/wind_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/humidity_value"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="32dp"
                android:text="@{currentData.windSpeed + `km/h`}"
                android:textColor="@color/darkBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weather_icon"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@{currentData.description}"
                android:textColor="@color/darkBlue"
                android:textSize="23sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_group">

            <TextView
                android:id="@+id/weekly_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:text="@string/weekly_forecast"
                android:textColor="@color/darkBlue"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/weekly_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weekly_text" />
        </RelativeLayout>
    </RelativeLayout>
</layout>