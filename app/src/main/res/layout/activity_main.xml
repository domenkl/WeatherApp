<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <View
            android:id="@+id/ellipse_1"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_marginStart="-79dp"
            android:layout_marginTop="0dp"
            android:alpha="0.69999998807907"
            android:background="@drawable/ellipse_light_blue" />

        <View
            android:id="@+id/ellipse_2"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-79dp"
            android:alpha="0.69999998807907"
            android:background="@drawable/ellipse_light_blue" />

        <ImageView
            android:id="@+id/logo_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/ellipse_2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter"
            android:text="@string/title"
            android:textColor="@color/title_blue"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter"
            android:text="@string/search_text"
            android:textAlignment="center"
            android:textColor="@color/title_blue"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:autofillHints="name"
            android:background="@color/white"
            android:hint="@string/search_hint"
            android:inputType="text"
            android:textAlignment="center"
            android:minHeight="40dp"
            android:textColorHint="@color/grey" />

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/search"
            android:textSize="15sp"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:id="@+id/use_location"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:textSize="15sp"
            android:text="@string/use_location"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/fast_forecast"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:text="@string/fast_forecast"
            android:layout_marginStart="10dp"
            tools:ignore="ButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>